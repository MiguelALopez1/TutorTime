<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeStudentFragment"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="0dp">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="412dp"
        android:layout_height="238dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/tutor_time_logo_circle"
        app:layout_constraintBottom_toTopOf="@+id/findTutors"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/findTutors"
        android:layout_width="319dp"
        android:layout_height="70dp"
        android:backgroundTint="@color/dark_blue"
        android:text="Find Tutors"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/messageTutors"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView" />

    <Button
        android:id="@+id/messageTutors"
        android:layout_width="319dp"
        android:layout_height="70dp"
        android:backgroundTint="@color/dark_blue"
        android:text="Message Tutors"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/editProfile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/findTutors" />

    <Button
        android:id="@+id/editProfile"
        android:layout_width="319dp"
        android:layout_height="70dp"
        android:backgroundTint="@color/dark_blue"
        android:text="Edit Profile"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/setting"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/messageTutors" />

    <Button
        android:id="@+id/setting"
        android:layout_width="319dp"
        android:layout_height="70dp"
        android:backgroundTint="@color/dark_blue"
        android:text="Setting"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editProfile"/>


</androidx.constraintlayout.widget.ConstraintLayout>